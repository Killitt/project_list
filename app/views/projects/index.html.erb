<h1>Projects</h1>

<section id="projects">
  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Summary</th>
      <th>Start date</th>
      <th>End date</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @projects.each_with_index do |project, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%=link_to project.name, project_path(project)  %></td>
        <td><%= project.summary %></td>
        <td><%= project.start_date.to_date.strftime("%d %B, %Y") %></td>
        <td><%= project.end_date.to_date.strftime("%d %B, %Y") %></td>
        <% if user_signed_in? %>
          <td>
            <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-outline-primary btn-sm'  %>
            <%= link_to 'Delete', project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm'  %>
          </td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>